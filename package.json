{
  "name": "vaylo-template-backend",
  "version": "1.0.0",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "NODE_ENV=production bun src/index.ts",
    "migrate": "MIGRATOR_ACTION=upgrade bun run src/database/migrator.ts",
    "migrate:up": "bun run migrate",
    "migrate:down": "MIGRATOR_ACTION=downgrade bun run src/database/migrator.ts",
    "start:cold": "bun run migrate && bun run start",
    "lint": "bunx oxlint --ignore-path=.oxlintignore && bunx eslint",
    "sub:custom": "NODE_ENV=production bun run src/events/subscribers/custom.ts"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.2.0",
    "@vaylo/nats": "^1.1.1",
    "@vaylo/pino": "^1.0.0",
    "elysia": "^1.2.25",
    "elysia-http-status-code": "^1.0.9",
    "elysia-protobuf": "^1.0.1",
    "ioredis": "^5.6.0",
    "kysely": "^0.27.6",
    "pg": "^8.13.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/pg": "^8.11.11",
    "bun-types": "latest",
    "eslint": "^9.22.0",
    "eslint-plugin-oxlint": "^0.15.13",
    "husky": "^9.1.7",
    "oxlint": "^0.15.13",
    "pino": "^9.6.0",
    "pino-loki": "^2.5.0",
    "pino-pretty": "^13.0.0",
    "ts-proto": "^2.6.1",
    "typescript-eslint": "^8.26.0"
  },
  "module": "src/index.ts"
}
